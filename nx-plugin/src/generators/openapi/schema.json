{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "openapi",
  "type": "object",
  "cli": "nx",
  "properties": {
    "schema": {
      "default": "http://localhost:3000/swagger/v1/swagger.json",
      "type": "string"
    },
    "deleteExisting": {
      "type": "boolean",
      "default": false
    },
    "endpointsPath": {
      "type": "string",
      "default": "libs/api/endpoints/src"
    },
    "dtoPath": {
      "type": "string",
      "default": "libs/api/dto/src"
    }
  },
  "required": [
    "schema"
  ]
}
